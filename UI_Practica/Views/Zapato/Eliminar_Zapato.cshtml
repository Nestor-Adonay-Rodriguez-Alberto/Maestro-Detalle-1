@model Entidades.Zapato

@{
    ViewData["Title"] = "Eliminar_Zapato";
}

<h1>Eliminar Zapato</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Zapato</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("NOMBRE")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("PRECIO")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Precio) 
        </dd>
    </dl>

    <form asp-action="Eliminar_Zapato">
        <input type="hidden" asp-for="Id_Zapato" />
        <input type="submit" value="ELIMINAR" class="btn btn-danger" /> |
        <a asp-action="Registros_Zapatos" class="btn btn-secondary">CANCELAR</a>
    </form>
</div>
