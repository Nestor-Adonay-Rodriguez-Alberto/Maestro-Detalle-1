@model Entidades.Zapato

@{
    ViewData["Title"] = "Editar_Zapato";
}

<h1>Editar Zapato</h1>

<h4>Zapato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar_Zapato">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_Zapato" />

            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input type="number" asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="GUARDAR" class="btn btn-primary" />
                <a asp-action="Registros_Zapatos" class="btn btn-secondary">CANCELAR</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
