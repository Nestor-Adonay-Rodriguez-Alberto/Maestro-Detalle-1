@model Entidades.Compra

@{
    ViewData["Title"] = "Eliminar_Compra";
}

<h1>Eliminar_Compra</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Compra</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaRealizada)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaRealizada)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Correlativo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Correlativo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>
    <!-- Vista Parcial-->
    <div class="col-md-12" style="margin-top:10px;" id="divDetalleCompra">
        @await Html.PartialAsync("_Detalle_Compra", Model.Lista_DetalleCompra)
    </div>
    <form asp-action="Eliminar_Compra">
        <input type="hidden" asp-for="Id_Compra" />
        <input type="submit" value="ELIMINAR" class="btn btn-danger" /> |
        <a asp-action="Registros_Compras" class="btn btn-secondary">CANCELAR</a>
    </form>
</div>
